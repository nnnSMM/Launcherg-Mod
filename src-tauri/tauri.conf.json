{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Launcherg",
    "version": "0.2.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "http": {
        "request": true,
        "scope": [
          "https://erogamescape.dyndns.org/~ap2/ero/toukei_kaiseki/*",
          "https://seiya-saiga.com/game/*",
          "https://raw.githubusercontent.com/ryoha000/launcherg/*"
        ]
      },
      "clipboard": {
        "all": false,
        "readText": true,
        "writeText": false
      },
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": true,
        "exists": true,
        "readDir": false,
        "readFile": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": ["**"],
        "writeFile": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ryoha.moe",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": ["bin/extract-icon"],
      "windows": {
        "wix": {
          "language": "ja-JP"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Launcherg",
        "width": 800,
        "height": 600
      }
    ],
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg3RDI3NjI1MjM0MkI0NDMKUldSRHRFSWpKWGJTaCtEM1JHNEhPZGlIdzhnSWdMc1I0Unp2SXZ1NEl2Q0FmeU9QOFUxaUZuU3AK",
      "endpoints": [
        "https://raw.githubusercontent.com/ryoha000/launcherg/main/.tauri-updater.json"
      ],
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    }
  }
}
